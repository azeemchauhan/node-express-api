{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@controllers/*": [ "src/controllers/*" ],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@utils/*": ["src/utils/*"],
      "@data/*": ["src/data/*"],
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "tests/**/*.test.ts", "scripts/seedDb.ts", "typings/**/*.ts", "tests/setup.api.ts"]
}